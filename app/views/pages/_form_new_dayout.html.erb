<div class="d-flex justify-content-center">
  <%= simple_form_for [itinerary], data: { controller: 'flatpickr' }  do |f| %>
  <div class="m-4 p-4" style="max-width:850px; max-height: 800px";>
    <div>
      <div class="d-flex" style="justify-content: space-evenly;">
        <div class="input-container">
          <div class="">
            <%= f.input :start_address, required: true,
            input_html:{data: {address_target: "address"}, class: "d-none"},
            wrapper_html: {data: {controller: "address", address_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
          </div>
          <div class="d-flex" >
            <div class="inputs">
              <%= f.input :date, as: :string, placeholder: "Date", input_html: { class: "myborders", data: {flatpickr_target: "date" } } %>
            </div>
            <div class="inputs">
              <%= f.input :start_time, placeholder: "Start", as: :string, input_html: { class: "myborders", data: {flatpickr_target: "start" } } %>
            </div>
            <div class="inputs">
              <%= f.input :end_time, placeholder: "End", as: :string, input_html: { class: "myborders", data: {flatpickr_target: "end" } } %>
            </div>
          </div>
          <div class="slider">
            <p class="mb-0 pound">&nbsp;£&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;££&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;£££&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;££££&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;£££££</p>
            <%= f.input :budget, as: :range, input_html: { min: 0, step: 1, max: 4, class: "mb-0"} %>
          </div>
          <div class="inputs mb-4">
            <%= f.input :dining_requirements, placeholder: "Dining preferences, e.g. vegan", input_html: { class: "myborders" } %>
          </div>
        </div>
        <div class="">
          <%= f.input :interests, as: :check_boxes, collection_wrapper_tag: 'div', collection_wrapper_class: 'category-wrapper', item_wrapper_class: 'category-item', input_html: {class: 'category-selector'}, collection: Itinerary::INTERESTS, include_hidden: false %>
        </div>
      </div>
      <%= f.submit class: "btn btn-pink border2" %>
    </div>
    </div>
  <% end %>
</div>
