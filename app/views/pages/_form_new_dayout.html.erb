<div class="container">
  <div class="parent1">
    <div class="col-3">
      <h1 class="text-center spacing3">Get a plan now!</h1>
    </div>
  </div>
  <div class="parent1">
    <div class="col-5">
      <div class="bg-color col-8">
        <div class="parent2">
          <%= simple_form_for [itinerary], data: { controller: 'flatpickr' } do |f| %>
            <%= f.input :start_address, placeholder: "Enter address here", required: true %>
            <%= f.input :date, as: :string, required: true  %>
            <%= f.input :start_time, :as => :time, :minute_step => 15, required: true %>
            <%= f.input :end_time, :as => :time, :minute_step => 15, required: true %>
            <%= f.input :budget, as: :range, input_html: { min: 0, step: 1, max: 4} %>
            <%= f.input :interests,
                        as: :check_boxes,
                        collection_wrapper_tag: 'div',
                        collection_wrapper_class: 'category-wrapper spacing3',
                        item_wrapper_class: 'category-item border1',
                        input_html: {class: 'category-selector'},
                        collection: Itinerary::INTERESTS %>
            <%= f.input :dining_requirements, placeholder: "Italian"  %>
            <%= f.input :details_wheelchair_accessible_entrance, as: :radio_buttons %>
            <%= f.submit class: "btn btn-pink border2 spacing1" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
