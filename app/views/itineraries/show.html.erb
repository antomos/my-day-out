<div>
  <div>
    <div class="event-container justify-content-center">
      <div>
        <h3 class="h2 mb-4 content5"><%= @itinerary.saved ? "Itinerary Confirmed" : "Customise your Itinerary"%></h3>
      </div>
      <div class="container" <% unless @itinerary.saved %>data-controller="sortable"<%end%> id="event" data-target-id="<%= @itinerary.id %>" >
        <% @events.each do |event| %>
          <%= render "events/event_infos", event: event, itinerary: @itinerary, confirmed:@confirmed %>
        <% end %>
      </div>
    </div>

  <div style="width: 320px;">
    <h2 class="h2 content5">Add your own destination</h2>
    <%= render "events/new_event_form", itinerary: @itinerary%>
  </div>
  <% if @itinerary.saved%>
    <%= link_to "Share", share_path(@itinerary.share_token), class: 'btn btn-pink border2' %>
  <% else %>
    <%= button_to 'Save Itinerary', save_path(@itinerary), method: :patch, class: 'btn btn-pink border2' %>
  <% end %>

</div>

