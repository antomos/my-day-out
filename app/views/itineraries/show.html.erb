<div class="container">
  <div class="d-flex flex-column align-items-center" style="min-width:100%">
    <div class="container event-container">
      <div>
        <h3 class="h2 mb-3 content5"><%= @confirmed == "true" ? "Itinerary Confirmed" : "Customise your Itinerary"%></h3>
      </div>
      <div class="container" <% if @confirmed!="true" %>data-controller="sortable"<%end%> id="event" data-target-id="<%= @itinerary.id %>" >
        <% @events.each do |event| %>
          <%= render "events/event_infos", event: event, itinerary: @itinerary, confirmed:@confirmed %>
        <% end %>
      </div>
    </div>

  <div class="content5">
    <h2>OR:</h2>
  </div>

  <div class="d-flex flex-column" style="width: 320px;">
    <h2 class="h2 content5">Add your destination</h2>
    <%= render "events/new_event_form", itinerary: @itinerary%>
  </div>

  <div>
    <% if @confirmed!="true"%>
      <%= button_to 'Confirm Itinerary', confirm_path(@itinerary), method: :get, class: 'btn btn-pink border2 confirm-itinerary' %>
    <% end %>
  </div>

</div>
