<div class="row event-card col-5" data-controller="edit-event" data-edit-event-target="card" >
  <div class="col-12" data-action="mouseover->edit-event#displayDetails mouseout->edit-event#hideDetails">

  <%# title  %>
    <div class="event-infos" data-edit-event-target= "infos">
        <h2><%= event.title %><small> (<%= event.duration %> mins)</small></h2>
    </div>
    <div>
    <%# card image %>
      <%= image_tag event.image_url, style: "min-width:320px; min-height:50px"; %>
    </div>
    <%# details %>
    <div class="d-none zoom col-12" data-edit-event-target="details" style="min-width:250px; max-height:200px"; >
        <h2>Description: </h2><%= event.description %> <br> <br>
        <h2>Address: </h2><%= event.address %></p>
    </div>
  </div>
</div>
